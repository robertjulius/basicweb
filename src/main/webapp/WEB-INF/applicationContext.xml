<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="userSessionManager"
		class="com.cjs.basicweb.modules.login.usersession.SimpleUserSessionManager"
		scope="singleton" />

	<bean id="userSession"
		class="com.cjs.basicweb.modules.login.usersession.SimpleUserSession"
		scope="prototype" />

	<bean id="user" class="com.cjs.basicweb.model.user.SimpleUser"
		scope="prototype" />

	<bean id="loginBL" class="com.cjs.basicweb.modules.login.logic.LoginBL"
		scope="prototype" />

	<bean id="loginExecuteAction"
		class="com.cjs.basicweb.modules.login.action.LoginExecuteAction"
		scope="prototype">
		<constructor-arg ref="loginBL" />
		<constructor-arg ref="userSession" />
	</bean>

	<bean id="logoutMainAction" class="com.cjs.basicweb.modules.logout.action.LogoutMainAction"
		scope="prototype" />

</beans>