<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<constant name="struts.action.extension" value="action"/>

	<package name="app-default" extends="hibernate-default">
		<interceptors>
			<interceptor-stack name="appDefault">
				<interceptor-ref name="timer" />
				<interceptor-ref name="logger" />
				<interceptor-ref name="defaultStack">
					<param name="exception.logEnabled">true</param>
					<param name="exception.logLevel">ERROR</param>
					<param name="params.excludeParams">dojo\..*,^struts\..*,^session\..*,^request\..*,^application\..*,^servlet(Request|Response)\..*,parameters\...*</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="appDefault" />

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="topFrame">
			<result>/jsp/main/top_frame.jsp</result>
		</action>
		
		<action name="leftFrame">
			<result>/jsp/main/left_frame.jsp</result>
		</action>

		<action name="home">
			<result>/jsp/main/home.jsp</result>
		</action>

		<action name="executeLogin" class="loginExecuteAction">
			<interceptor-ref name="defaultStackHibernate" />
			<result name="input">/jsp/modules/login/login.jsp</result>
			<result name="success">/jsp/main/main.jsp</result>
		</action>

		<action name="executeLogout" class="logoutExecuteAction">
			<result name="success">/jsp/modules/logout/logout.jsp</result>
		</action>
		
		<action name="testFirstEntry" class="testFirstEntryAction">
			<result name="success">/jsp/modules/test/test_maintenance_main.jsp</result>
		</action>

	</package>

	<include file="com/cjs/basicweb/modules/test/test-struts.xml"></include>

</struts>
