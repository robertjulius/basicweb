<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="module-update" extends="app-default" namespace="/modules/module">

		<action name="prepareUpdate"
			class="com.cjs.basicweb.modules.module.action.ModuleMaintenanceUpdateAction"
			method="prepareUpdate">
			<result name="success" type="redirectAction">update
			</result>
		</action>

		<action name="update"
			class="com.cjs.basicweb.modules.module.action.ModuleMaintenanceUpdateAction"
			method="redirectAction">
			<result name="success">/jsp/modules/module/module_maintenance_update.jsp
			</result>
		</action>

		<action name="validateUpdate"
			class="com.cjs.basicweb.modules.module.action.ModuleMaintenanceUpdateAction"
			method="validateUpdate">
			<result name="success" type="redirectAction">confirmUpdate
			</result>
			<result name="error" type="redirectAction">update
			</result>
		</action>

		<action name="confirmUpdate"
			class="com.cjs.basicweb.modules.module.action.ModuleMaintenanceUpdateAction"
			method="redirectAction">
			<result name="success">/jsp/modules/module/module_maintenance_confirm_update.jsp
			</result>
		</action>

		<action name="executeUpdate"
			class="com.cjs.basicweb.modules.module.action.ModuleMaintenanceUpdateAction"
			method="executeUpdate">
			<result name="success" type="redirectAction">summaryUpdate
			</result>
			<result name="error" type="redirectAction">confirmUpdate
			</result>
		</action>

		<action name="summaryUpdate"
			class="com.cjs.basicweb.modules.module.action.ModuleMaintenanceUpdateAction"
			method="redirectAction">
			<result name="success">/jsp/modules/module/module_maintenance_main.jsp
			</result>
		</action>

	</package>
</struts>
